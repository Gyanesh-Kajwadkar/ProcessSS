<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Activity.custumer_area.activity.AddUser_Activity"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:background="@drawable/gradient_background"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/multiply"
                android:layout_gravity="center|left"
                android:padding="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/toolbarHeading"
                android:gravity="center"
                android:text="New Customer"
                android:id="@+id/toolbarText"
                android:layout_marginLeft="10dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="Save"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/save_tv"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
    >
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/enterData_ll"
        android:background="@drawable/grey_boarder"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:id="@+id/name_et"
            android:padding="10dp"
            android:background="#00000000"/>
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/name_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/toolbarRed"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"/>

        </RelativeLayout>


        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile"
            android:id="@+id/mobile_et"
            android:padding="10dp"
            android:inputType="number"
            android:background="#00000000"/>
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/mob_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/toolbarRed"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/address_et"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:padding="10dp"
            android:background="#00000000"/>
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/address_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/toolbarRed"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"/>

        </RelativeLayout>
        <EditText
            android:id="@+id/gstn_et"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GSTN"
            android:padding="10dp"
            android:background="#00000000"/>
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/gstn_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/toolbarRed"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"/>

        </RelativeLayout>


        <Button
            android:text="Add location"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:id="@+id/locationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/detail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/grey_boarder"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/location_img">
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/toolbarRed"
                    android:text="XYZ Store"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"/>
             <!--   <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="(123456)"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/name_tv"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"/>-->
            </LinearLayout>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/black_location"
                android:layout_marginRight="5dp"
                android:id="@+id/location_img"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/urlBlue"
            android:text="123456"
            android:id="@+id/mobile_tv"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_toLeftOf="@+id/location_img"
            android:layout_marginRight="27dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Bus Stand Indore"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_toLeftOf="@+id/call_img"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/call"
                android:layout_marginRight="5dp"
                android:id="@+id/call_img"/>
        </RelativeLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toLeftOf="@+id/location_img">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="GST Number:"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="333333445"
                android:id="@+id/gstn_tv"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/name_tv"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"/>
        </LinearLayout>

       <!-- <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toLeftOf="@+id/location_img">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Outstanding amount:"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"/>
